<div class="headingName"><%= @user.name %></div>

<%= image_tag @user.image.url, class:'img-responsive rounded image-cropper' %>
<%= link_to 'Edit Profile', edit_user_path(:id) %>

<ul class="nav nav-pills">
  <li class="active"><%= link_to "Boards", boards_path %></li>
  <li><%= link_to "Pins", pins_path %></li>
  <li><%= link_to "Likes" %></li>
</ul>

<br>

<% current_user.boards.each do |board| %>
	
	<div class="board">
  
  	<div class="board-image"><%= image_tag board.image.url(:medium) %>
  	
  	<% if @user == current_user %>
      <%= link_to 'Edit', edit_board_path(board), :class => 'btn btn-xs btn-default edit' %> 	
      <%= link_to 'Delete', board, :class => 'btn btn-xs btn-default delete', method: :delete, data: {
        confirm: 'Are you sure?' } %>
    
    <% end %>
  
  </div>
  
  <div class="board-block">
    <p class="board-text"><%= link_to board.name, board %><br>
    <%= board.pins.count %> Pins</p>
  </div>
</div>
 <% end %>

