<div class="boardHeader">
  <h1 class="boardName"><%= @board.name %></h1>
</div>

<% @pins.each do |pin| %>

<div class="card">
  <div class="card-image"><%= image_tag pin.image.url %>
  	<input class="update" type="button" value="Edit" />
  	<input class="delete" type="button" value="Delete" />
  </div>
  
  <div class="card-block">
    <p class="card-text"><%= pin.description %></p>
  </div>

</div>
	<%= link_to 'Edit', edit_pin_path %>
	<%= link_to 'Delete', pin, method: :delete, data: {
		confirm: 'Are you sure?' } %>
		
<% end %>


<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %> |
<%= link_to 'Save Pin', new_board_pin_path(:board_id) %>

