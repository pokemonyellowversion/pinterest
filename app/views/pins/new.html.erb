<h1>New Pin</h1>

<%= form_for [:board, @pin], html: { multipart: true } do |form| %>

  <%= form.label :description %>
  <%= form.text_field :description %><br>

  <%= form.file_field :image %><br><br>

  <%= form.hidden_field :board_id, value: @pin.board_id %>
	
  <%= form.submit 'Save Pin!' %>

<% end %>

<%= link_to 'Back', :back %>