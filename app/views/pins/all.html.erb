<h1>All Pins</h1>

<% @pins.each do |pin| %>
	<div class="card">
	  <div class="card-image"><%= image_tag pin.image.url %>
	  	<% if pin.board.user == current_user %>
	      <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn btn-xs btn-default edit' %>
	  	
	      <%= link_to 'Delete', pin, :class => 'btn btn-xs btn-danger delete', method: :delete, data: {
	        confirm: 'Are you sure?' } %>
	    <% end %>
	  </div>
	  
	  <div class="card-block">
	    <p class="card-text"><%= pin.description %></p>
	  </div>

	<%= link_to 'Show', pin %>
	<%= link_to 'Edit', edit_pin_path(pin) %>
	<%= link_to 'Delete', pin, method: :delete, data: {
		confirm: 'Are you sure?' } %>
<% end %>

<br>


